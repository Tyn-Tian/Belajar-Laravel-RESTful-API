{
    "openapi": "3.0.2",
    "info": {
        "title": "Contact API",
        "description": "Contact API",
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": "http://localhost:8000"
        }
    ],
    "paths": {
        "/api/contacts": {
            "post": {
                "description": "Create new contact",
                "parameters": [
                    {
                        "$ref": "#/components/parameters/authorization"
                    }
                ],
                "requestBody": {
                    "description": "Create new contact",
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/contact_request"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Success create contact",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "data": {
                                            "type": "object",
                                            "properties": {
                                                "first_name": {
                                                    "type": "string"
                                                },
                                                "last_name": {
                                                    "type": "string"
                                                },
                                                "email": {
                                                    "type": "string"
                                                },
                                                "phone": {
                                                    "type": "string"
                                                }
                                            }
                                        },
                                        "errors": {
                                            "type": "object"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            },
            "get": {
                "description": "Search contact",
                "parameters": [
                    {
                        "$ref": "#/components/parameters/authorization"
                    },
                    {
                        "name": "name",
                        "in": "query",
                        "schema": {}
                    },
                    {
                        "name": "phone",
                        "in": "query",
                        "schema": {}
                    }, 
                    {
                        "name": "email",
                        "in": "query",
                        "schema": {}
                    },
                    {
                        "name": "size",
                        "in": "query",
                        "schema": {}
                    },
                    {
                        "name": "page",
                        "in": "query",
                        "schema": {}
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Success search contact",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "data": {
                                            "type": "array",
                                            "items": {
                                                "type": "object",
                                                "properties": {
                                                    "first_name": {
                                                        "type": "string"
                                                    },
                                                    "last_name": {
                                                        "type": "string"
                                                    },
                                                    "email": {
                                                        "type": "string"
                                                    },
                                                    "phone": {
                                                        "type": "string"
                                                    }
                                                }
                                            }
                                        },
                                        "errors": {
                                            "type": "object"
                                        },
                                        "meta": {
                                            "type": "object"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/contacts/{id}": {
            "put": {
                "description": "Update contact",
                "parameters": [
                    {
                        "$ref": "#/components/parameters/authorization"
                    },
                    {
                        "$ref": "#/components/parameters/contact_id"
                    }
                ],
                "requestBody": {
                    "description": "Update contact",
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/contact_request"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Success update contact",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/contact_response"
                                }
                            }
                        }
                    }
                }
            },
            "get": {
                "description": "Get contact",
                "parameters": [
                    {
                        "$ref": "#/components/parameters/authorization"
                    },
                    {
                        "$ref": "#/components/parameters/contact_id"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Success get contact",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/contact_response"
                                }
                            }
                        }
                    }
                }
            },
            "delete": {
                "description": "Delete contact",
                "parameters": [
                    {
                        "$ref": "#/components/parameters/authorization"
                    },
                    {
                        "$ref": "#/components/parameters/contact_id"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Success delete contact",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "data": {
                                            "type": "boolean"
                                        },
                                        "errors": {
                                            "type": "object"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "components": {
        "parameters": {
            "authorization": {
                "name": "Authorization",
                "in": "header",
                "schema": {}
            },
            "contact_id": {
                "name": "id",
                "in": "path",
                "schema": {},
                "required": true
            }
        },
        "schemas": {
            "contact_request": {
                "type": "object",
                "properties": {
                    "first_name": {
                        "type": "string"
                    },
                    "last_name": {
                        "type": "string"
                    },
                    "email": {
                        "type": "string"
                    },
                    "phone": {
                        "type": "string"
                    }
                }
            },
            "contact_response": {
                "type": "object",
                "properties": {
                    "data": {
                        "type": "object",
                        "properties": {
                            "first_name": {
                                "type": "string"
                            },
                            "last_name": {
                                "type": "string"
                            },
                            "email": {
                                "type": "string"
                            },
                            "phone": {
                                "type": "string"
                            }
                        }
                    },
                    "errors": {
                        "type": "object"
                    }
                }
            }
        }
    }
}
